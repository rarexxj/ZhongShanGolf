@using System.Web.Optimization
@using Autofac
@using BntWeb.Environment
@using BntWeb.Security
@using BntWeb.Security.Identity
@using BntWeb.Wallet
@using BntWeb.Wallet.Models
@{
    ViewBag.Title = GuestModule.DisplayName;
    ViewBag.SubTitle = "嘉宾列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@section HeaderRight {
        <a class="btn btn-info publish" href="">
            <i class="icon-plus bigger-110"></i>
            发布
        </a>
}
<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="Name"> 姓名 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <input type="text" id="Name" name="Name" placeholder="姓名" value="" />
                </div>
            </div>
        </div>
        <div class="col-lg-1 col-md-2 col-sm-4 text-center query-form-item">
            <button class="btn btn-sm btn-info" type="submit" id="QueryButton">
                <i class="icon-search bigger-110"></i>
                查询
            </button>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="MembersTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>姓名</th>

                        <th>折扣</th>
                        <th>积分</th>
                        <th>创建时间</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/js/admin/jquery-datatable")

    <script type="text/javascript">
        var url_createGuest = "@Url.Action("Create", "Admin", new {area = GuestModule.Area })";
        var url_loadPage = "@Url.Action("ListOnPage", "Admin", new {area = GuestModule.Area })";
        var url_deleteGuest = "@Url.Action("DeleteGuest", "Admin", new {area = GuestModule.Area })";
        var url_editGuest = "@Url.Action("Edit", "Admin", new {area = GuestModule.Area })";
        var url_cashBill = "@Url.Action("List", "Bill", new {area = WalletModule.Area, walletType = WalletType.Cash, memberId="[memberId]" })";
        var url_integralBill = "@Url.Action("List", "Bill", new {area = WalletModule.Area, walletType = WalletType.Integral, memberId="[memberId]" })";

        $(".publish").attr("href", url_createGuest + "");
    </script>

    @Scripts.Render("~/js/guest/list")
}

